<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="480dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:id="@+id/tile_love_sms"
                android:background="@color/super_cute_sms_pink"
                android:layout_marginBottom="3dp"
                android:weightSum="1"
                android:padding="@dimen/abc_action_bar_overflow_padding_end_material">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Love SMS"
                    android:id="@+id/textView6"
                    android:textColor="#fff" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/balloon_heart_256" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_marginTop="3dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="237dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="114dp"
                        android:layout_height="match_parent"
                        android:background="@color/super_cute_sms_green"
                        android:id="@+id/tile_christmas"
                        android:layout_marginRight="3dp"
                        android:padding="@dimen/abc_action_bar_overflow_padding_start_material">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Christmas"
                            android:id="@+id/textView11"
                            android:textColor="#fff" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView9"
                            android:layout_gravity="center"
                            android:src="@drawable/santa_128" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="114dp"
                        android:layout_height="match_parent"
                        android:background="@color/super_cute_sms_blue"
                        android:id="@+id/tile_birthday"
                        android:layout_marginLeft="3dp"
                        android:padding="@dimen/abc_action_bar_overflow_padding_start_material">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Birthday"
                            android:id="@+id/textView12"
                            android:textColor="#fff" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView5"
                            android:layout_gravity="center"
                            android:src="@drawable/cake_128"
                            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_start_material" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="237dp"
                    android:layout_height="match_parent"
                    android:background="@color/super_cute_sms_orange"
                    android:id="@+id/tile_new_year"
                    android:layout_marginLeft="3dp"
                    android:padding="@dimen/abc_action_bar_overflow_padding_start_material">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="New Year"
                        android:textColor="#fff" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView4"
                        android:layout_gravity="center"
                        android:src="@drawable/firecracker_128" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:background="@color/super_cute_sms_blue"
                android:layout_marginBottom="3dp"
                android:padding="@dimen/abc_action_bar_overflow_padding_start_material">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="other"
                    android:id="@+id/textView7"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:layout_marginTop="3dp"
                android:background="@color/super_cute_sms_purple"
                android:id="@+id/tile_women_day"
                android:padding="@dimen/abc_action_bar_overflow_padding_start_material">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView8"
                        android:src="@drawable/international_womens_day"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:layout_marginBottom="3dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="117dp"
                    android:layout_height="match_parent"
                    android:background="@color/super_cute_sms_green"
                    android:layout_marginRight="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Other"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="117dp"
                    android:layout_height="match_parent"
                    android:background="@color/super_cute_sms_blue"
                    android:layout_marginLeft="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Other"
                        android:textColor="#fff" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:background="@color/super_cute_sms_orange"
                android:layout_marginTop="3dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="New Year"
                    android:textColor="#fff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_marginRight="6dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:background="@color/super_cute_sms_orange"
                android:layout_marginBottom="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="New Year"
                    android:id="@+id/textView8"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:layout_marginTop="3dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="117dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@color/super_cute_sms_green"
                    android:layout_marginRight="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Other"
                        android:id="@+id/textView9"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="117dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@color/super_cute_sms_blue"
                    android:layout_marginLeft="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Other"
                        android:id="@+id/textView10"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>
